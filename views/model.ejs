<%- include('partials/header') %>
    <%- include('partials/nav') %>
        <div
            class="max-w-sm bg-white border items-center border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <a href="<%= model.image_url %>">
                <img class="rounded-t-lg" src="<%= model.image_url%>" alt="" />
            </a>
            <div class="p-5">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                    <%= model.brand.name%>
                        <%= model.name%>
                </h5>
                <p class="mb-3 font-normal text-sm text-gray-700 dark:text-gray-400">
                    ID: <%= model.id %>
                </p>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    <%= model.description %>
                </p>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Top Speed: <%= model.topspeed %> km/h
                </p>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Concept Car: <%= model.concept_car %>
                </p>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Type: <%= model.type %>
                </p>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Features:
                </p>
                <div class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    <% for (let feature of model.features) { %>
                        <p
                            class="m-2 <% if (model.id==='CAR-007' ) { %>bg-midnightblue <% }else {%>bg-purple-100<%}%> text-gray-100 font-medium me-2 px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300 ">
                            <%= feature %>
                        </p>
                        <% } %>
                </div>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Date First Produced: <%= model.date_first_produced %>
                </p>
                <a href="/brand/<%= model.brand.id %>"
                    class="rounded-lg shadow-lg px-6 py-3 relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-sm font-medium text-gray-900
                    rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500 text-white
                    hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                    <%= model.brand.name %>
                        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9" />
                        </svg>
                </a>
                <% if (model.id==='CAR-007' ) { %>
                    <!-- Easter egg for James Bond reference -->
                    <div class="mt-5 p-3 bg-gray-900 text-white rounded-md">
                        <p class="font-bold">üë®üèª‚ÄçüíºShaken, not stirred. You've found the secret agent!</p>
                    </div>
                    <% } %>
            </div>
        </div>

        <%- include('partials/footer') %>