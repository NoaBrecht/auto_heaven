<%- include('partials/header') %>
    <%- include('partials/nav') %>
        <div id="brand-info"
            class="max-w-sm bg-white border items-center border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
            <img class="rounded-t-lg" src="<%= brand.logo %>" alt="" />
            <div class="p-5">
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
                    <%= brand.name %>
                </h5>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Country: <%= brand.country %>
                </p>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                    Founded Year: <%= brand.foundedYear %>
                </p>
                <a href="https://<%= brand.website %>"
                    class="rounded-lg shadow-lg px-6 py-3 relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden
                    text-sm font-medium text-gray-900
                    rounded-lg group bg-gradient-to-br from-purple-600 to-blue-500 group-hover:from-purple-600 group-hover:to-blue-500
                    text-white
                    hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-blue-300 dark:focus:ring-blue-800">
                    <%= brand.website %>
                        <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M1 5h12m0 0L9 1m4 4L9 9" />
                        </svg>
                </a>
            </div>
        </div>
        <%- include('partials/footer') %>